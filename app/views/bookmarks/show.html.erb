<div class="page-header">
  <h3>Bookmark #<%= @bookmark.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <!-- <dd><%= User.find_by(:id => current_user.id).email%></dd> -->
      <dd><%= @bookmark.user.email%></dd>
      <!-- <dd><%= @bookmark.user_id %></dd> -->

      <dt>Movie</dt>
      <!-- <dd><%= Movie.find_by(:id => @bookmark.movie_id).title%></dd> -->
      <dd><%= @bookmark.movie.title%></dd>
      <!-- <dd><%= @bookmark.movie_id %></dd> -->

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/bookmarks" class="btn btn-primary">
